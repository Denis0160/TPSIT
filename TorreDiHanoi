
#include <stdio.h>
#include<stdlib.h>
#include<time.h>
/***
 * ANALISI RISOLUTIVA
 * 
 * il primo array viene popolato attraverso una funzione random, la dimensione Ã¨ scelta dall'utente, e aqnche il range di valore
 * massimo viene sceltaq dall'utente. Successivamneto, attraverso l'algoritmo di ordinamento selection sort, l'array 1 (La prima torre), viene ordinata
 * in modo decrescente. Gli elementi vengono copiati nel secondo array 
 * ***/
 
void Casuale(int vettore[], int dim, int valoreMassimo){
    for(int i=0;i<dim;i++){
        vettore[i]=rand()%(valoreMassimo+1);//valori da 0 a valore massimo
    }
}
int main()
{
    int dim=0;
    srand(time(NULL));
    int valoreMassimo=0;
    printf("Inserisci la dimensione\n");
    scanf("%d",&dim);
    printf("Inserisci il valore massimo\n");
    scanf("%d",&valoreMassimo);
    
    int vettore[dim];
    
    Casuale(vettore,dim,valoreMassimo);
    
    for(int i=0; i<dim-1;i++) {
      int min=i;
      for (int j=i+1;j<dim;j++) {
         if (vettore[j]>vettore[min])
            min=j;
      }
      int t=vettore[min];
      vettore[min]=vettore[i];
      vettore[i]=t;
    }
    
    printf("Vettore 1:\n");
   for(int i=0;i<dim;i++){
       printf("%d, ",vettore[i]);
   }
   
   int vettore2[dim];
   int cont2=0;
   
   for(int i=0;i<dim;i++){
       vettore2[cont2]=vettore[dim-1-i];
       cont2++;
   }
   
   printf("\nVettore 2:\n");
   for(int i=0;i<dim;i++){
       printf("%d, ",vettore2[i]);
   }
   
   int vettore3[dim];
   int cont3=0;
   
   for(int i=0;i<dim;i++){
       vettore3[cont3]=vettore2[dim-1-i];
       cont3++;
       
   }
   
   printf("\nVettore 3:\n");
   for(int i=0;i<dim;i++){
       printf("%d, ",vettore3[i]);
   }
}
